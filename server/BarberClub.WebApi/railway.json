{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd server && dotnet publish BarberClub.WebApi/BarberClub.WebApi.csproj -c Release -o out"
  },
  "deploy": {
    "startCommand": "cd server/out && dotnet BarberClub.WebApi.dll",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}